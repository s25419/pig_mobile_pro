<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/ColorBackground"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_menu"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        card_view:cardBackgroundColor="@color/ColorNavBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/thaisansneue_bold"
            android:gravity="center"
            android:text="เมนูหลัก"
            android:textColor="#ffffff"
            android:textSize="28sp" />


        <ImageView
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:src="@drawable/logout"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"/>

    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@+id/card_menu"
            card_view:cardBackgroundColor="@color/ColorShow">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:layout_width="74dp"
                    android:layout_height="75dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/user" />

            <TextView
                android:id="@+id/txt_user"
                android:fontFamily="@font/thaisansneue_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ศุภณัฐ เหลี่ยมพิทักษ์"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"/>


            <TextView
                android:fontFamily="@font/thaisansneue_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ฟาร์ม:"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="100dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="113dp"
                android:layout_marginTop="70dp"
                android:fontFamily="@font/thaisansneue_bold"
                android:text="ยูนิต:"
                android:textColor="#ffffff"
                android:textSize="25sp" />



            <TextView
                android:id="@+id/txt_farm"
                android:fontFamily="@font/thaisansneue_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="หลุ่มอวกาศ"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="165dp"/>

            <TextView
                android:id="@+id/txt_unit"
                android:fontFamily="@font/thaisansneue_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ศรีโสธร"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="165dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_setting"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/card_view"
        android:layout_alignParentEnd="true"
        card_view:cardBackgroundColor="#666666">


        <TextView
            android:id="@+id/txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/thaisansneue_regular"
            android:text="ตั้งค่า"
            android:textColor="#ffffff"
            android:textSize="25sp" />

    </android.support.v7.widget.CardView>

